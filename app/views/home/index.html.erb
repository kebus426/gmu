<% provide(:title, "Index") %>
<% if logged_in? %>
  <h1>最新の曲</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class= "musics">
	<% @musics.each do |music|%>
	<div class= "box">
	<p><%= link_to music.music_name, music_path(music.id) %></p>
	<p><%= link_to music.user.user_name, user_path(music.user.id) %></p>
	<p><%= audio_tag(music.file.url , :controls => true)%></p>
        <p>投稿日：<%= music.created_at %></p>
	</div>
	<% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class= "center jumbotron">
  <h1>Welcome to God Music Uploader</h1>
  <h2>
      This is the home page for the
      <a href="https://railstutorial.jp/">Ruby on Rails Tutorial</a>
      sample application.
  </h2>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: "Rails logo"),
    'http://rubyonrails.org/' %>

<% end %>
