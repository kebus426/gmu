<% provide(:title, "Bookmark") %>
<h1>ブックマーク一覧</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class= "musics">
	<% @musics.each do |music|%>
	<div class= "box">
	    <p><%= link_to music.music_name, music_path(music.id) %></p>
	    <p><%= link_to music.user.user_name, user_path(music.user.id) %></p>
	    <p><%= audio_tag(music.file.url , :controls => true)%></p>
            <p>投稿日：<%= music.created_at %></p>
	    <%= link_to "ブックマークから外す", delete_music_path(music), method: :delete, class: "btn btn-lg btn-primary" %>
	</div>
	<% end %>
      </div>
    </div>
</div>
