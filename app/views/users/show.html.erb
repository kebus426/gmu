<% provide(:title, @user.user_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.user_name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.musics.any? %>
      <h3>Musics (<%= @user.musics.count %>)</h3>
      <ol class="musics">
        <%= render @musics %>
      </ol>
      <%= will_paginate @musics %>
    <% end %>
  </div>
</div>
